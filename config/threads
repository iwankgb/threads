server {
	listen 8888;

	root /home/maciek/projects/threads/web;
        index index.php;

	location ~ ^/index\.php(/|$) {
                fastcgi_pass 127.0.0.1:9000;
		fastcgi_param  SCRIPT_FILENAME    $document_root$fastcgi_script_name;
                include /etc/nginx/fastcgi_params;
        }
}
